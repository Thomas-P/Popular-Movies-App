<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/trailer_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/movie_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/review_author_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:textAppearance="@style/MovieDetailTheme.Text"
        app:layout_constraintBottom_toTopOf="@+id/review_divider_image"
        app:layout_constraintLeft_toRightOf="@+id/trailer_item_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/trailer_item_icon"
        tools:text="Trailer 1" />

    <ImageView
        android:id="@+id/review_divider_image"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/trailer_item_icon"
        app:layout_constraintRight_toRightOf="@+id/review_author_label"
        app:layout_constraintTop_toBottomOf="@+id/trailer_item_icon"
        app:srcCompat="@color/cardview_dark_background"
        tools:ignore="ContentDescription" />
</android.support.constraint.ConstraintLayout>